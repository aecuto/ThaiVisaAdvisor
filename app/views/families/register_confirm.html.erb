<h1>Register</h1>
  
<%= bootstrap_form_with(model: User.new, url: families_register_path) do |f| %>

  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.hidden_field :is_family, value: true %>
  <%= f.hidden_field :passport_no, value: @passport_no %>

  <%= f.submit %>

<% end %>

<%= link_to 'Back', families_path, class: "btn btn-info" %>
