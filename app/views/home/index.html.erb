

<div class="row">
  <div class="col-12 text-center">

    <div class="row">
      <div class="col-12">
        <h1> LOGO THAI VISA ADVISOR </h1>
      </div>

      <div class="col-12">
        <div class="card text-center">
          <div class="card-header">
            Notice
          </div>
          <div class="card-body">
            <div class="col text-left">
              <% @notices.each do |notice| %>
                <h5>
                  <%= fa_icon "location-arrow" %> <%= notice.message %>
                </h5>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <% if !user_signed_in? %>
        <div class="col-12">
          <%= link_to 'Login', new_user_session_path, class: 'btn btn-outline-dark' %>  
        </div>
      <% end %>

      <% if current_user && current_user.is_admin %>
        <%= link_to 'Manage Organization', organizations_path, class: 'btn btn-outline-danger col-12' %>
        <%= link_to 'Manage Notice', notices_path, class: 'btn btn-outline-info col-12' %>  
      <% end %>
    </div>


  </div>
</div>



