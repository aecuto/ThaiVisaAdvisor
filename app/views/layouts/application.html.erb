<!DOCTYPE html>
<html>
  <head>
    <title>ThaiVisaAdvisor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Home</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if current_user.present? %>
            <li class="nav-item">
              <% if current_user.is_organization or current_user.is_admin %>
                <%= link_to 'Organization', organizations_path, class: 'nav-link' %>
              <% end %>
            </li>
            <li class="nav-item">
              <% if current_user.is_family %>
                <%= link_to 'Family', organization_family_members_path(@family.organization, @family), class: 'nav-link' %>
              <% end %>
            </li>
          <% end %>
        </ul>

        <ul class="navbar-nav">

          <% if user_signed_in? %>
            <li class="nav-item">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link'  %>        
            </li>
          <% else %>
            <li class="nav-item">
            <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>  
            </li>
          <% end %>

        </ul>

      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
